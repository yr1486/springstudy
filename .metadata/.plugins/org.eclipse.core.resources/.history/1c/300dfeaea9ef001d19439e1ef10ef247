<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<!-- namespace는 @Mapper를 지정한다. -->
<mapper namespace="com.gdu.staff.mapper.StaffMapper">

	<select id="getStaffList" resultType="StaffDTO">
		SELECT SNO, NAME, DEPT, SALARY
		  FROM STAFF
		 ORDER BY SNO DESC
	</select>
	
	<insert id="addStaff" parameterType="StaffDTO">
		INSERT INTO STAFF(
			SNO
		  , NAME
		  , DEPT
		  , SALARY
		 ) VALUES (
		 	#{sno}
		  , #{name}
		  , #{dept}
		  , <if test="dept == '기획부'">5000</if>
		  , <if test="dept == '개발부'">6000</if>
		  , <if test="dept == '영업부'">7000</if>
		  , <if test="dept != '기획부' and dept != '개발부' and dept != '영업부'">4000</if>
		 )
		 
		 
		 
		 
	</insert>
</mapper>